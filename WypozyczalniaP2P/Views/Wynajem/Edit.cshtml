@model WypozyczalniaP2P.Models.Wynajem

<h1>Edytuj wynajem</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="KlientId" class="control-label">Klient</label>
        <select asp-for="KlientId" class="form-control" asp-items="ViewBag.KlientId"></select>
        <span asp-validation-for="KlientId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SamochodId" class="control-label">Samochód</label>
        <select asp-for="SamochodId" class="form-control" asp-items="ViewBag.SamochodId"></select>
        <span asp-validation-for="SamochodId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataRozpoczecia" class="control-label"></label>
        <input asp-for="DataRozpoczecia" class="form-control" type="date" />
        <span asp-validation-for="DataRozpoczecia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataZakonczenia" class="control-label"></label>
        <input asp-for="DataZakonczenia" class="form-control" type="date" />
        <span asp-validation-for="DataZakonczenia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IloscDni" class="control-label"></label>
        <input asp-for="IloscDni" class="form-control" readonly />
        <span asp-validation-for="IloscDni" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CalkowityKosztWynajmu" class="control-label"></label>
        <input asp-for="CalkowityKosztWynajmu" class="form-control" readonly />
        <span asp-validation-for="CalkowityKosztWynajmu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
