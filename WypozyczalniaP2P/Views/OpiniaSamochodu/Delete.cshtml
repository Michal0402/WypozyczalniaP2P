@model WypozyczalniaP2P.Models.OpiniaSamochodu

<h1>Usuń opinię</h1>

<h3>Czy na pewno chcesz usunąć tę opinię?</h3>
<div>
    <h4>Opinia o samochodzie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Autor.Email)</dd>
        <dt class="col-sm-2">Samochód</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Samochod.Marka) @Html.DisplayFor(model => model.Samochod.Model)</dd>
        <dt class="col-sm-2">Ocena</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Ocena)</dd>
        <dt class="col-sm-2">Komentarz</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Komentarz)</dd>
        <dt class="col-sm-2">Data dodania</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DataDodania)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy</a>
    </form>
</div>
