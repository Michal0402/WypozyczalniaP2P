@model WypozyczalniaP2P.Models.Klient

<h2>Usuń klienta</h2>

<h3>Czy na pewno chcesz usunąć tego klienta?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-3">Imię</dt>
        <dd class="col-sm-9">@Model.Imie</dd>
        <dt class="col-sm-3">Nazwisko</dt>
        <dd class="col-sm-9">@Model.Nazwisko</dd>
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>